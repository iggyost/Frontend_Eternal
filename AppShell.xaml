<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Frontend_Eternal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Frontend_Eternal.Views.ContentPages"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Items>
        <TabBar>
            <Tab Icon="home_icon.png">
                <ShellContent ContentTemplate="{DataTemplate local:HomePage}"
                              Route="Home">
                </ShellContent>
            </Tab>
            <Tab Icon="stat_icon.png">
                <ShellContent ContentTemplate="{DataTemplate local:StatisticsPage}"
                              Route="Favorite"></ShellContent>
            </Tab>
            <Tab Icon="favorite_icon.png">
                <ShellContent ContentTemplate="{DataTemplate local:FavoritesPage}"
                              Route="Favorite"></ShellContent>
            </Tab>
            <Tab Icon="profile_icon.png">
                <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}"
                              Route="Favorite"></ShellContent>
            </Tab>
        </TabBar>
    </Shell.Items>
</Shell>
